            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/seis"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/sete"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/oito"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/nove"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
