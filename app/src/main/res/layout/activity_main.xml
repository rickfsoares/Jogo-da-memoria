        <ImageView
            android:id="@+id/catorze"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/quinze"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/dezesseis"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
