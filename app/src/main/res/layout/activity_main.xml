            android:id="@+id/tres"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
            android:id="@+id/quatro"
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/tux"/>

        <ImageView
